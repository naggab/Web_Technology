{
  "compilerOptions": {
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "AMD",
    "target": "es2015",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules"]
}
